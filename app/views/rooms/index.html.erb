<style>

body {
  font-family: 'Bluesky';
}

.room-name {
 border: solid 2px gray;
 overflow: scroll;
 height:400px;
 font-size: 15px;
 padding:20px;
 background-color: #ffffffe6;
 margin-bottom: 15px;
}

.room-name a {
  color:gray;
}

.room-name a:hover {
  color: #3ecdc6;
}

.button-second {
  background: linear-gradient(45deg, #B388EB, #8093F1);
  border-radius: 10px;
  color: #FFF;
  font-size: 15px;
  letter-spacing: 1px;
  font-weight: 100;
  border: double 4px white;
  font-family: 'Bluesky';
  padding:5px;
}

.posts-heading {
  padding: 20px 30px;
  background-color: white;
  overflow: hidden;
  box-shadow: 0 2px 6px #c1ced7;
}
</style>

<h1>チャット一覧</h1>
<br>
<div class="room-name">
<% @entries.each do |e| %>
 <div class="posts-heading">
  <a href="/rooms/<%= e.room_id %>"><%= e.room.room_name %></a>
  <br>
 <%= e.room.updated_at.strftime("%Y-%-m-%-d %-H:%-M:%-S") %>
  </div>
<% end %>
</div>
<br>
<p><a href="/users/<%= current_user.id %>" class="button-second"><%= current_user.name %>のページに戻る</a></p>
<br>
<p><a href="/" class="button-second">トップに戻る</a></p>