<style>

body {
  font-family: 'Bluesky';
}

.room-name {
  padding-bottom:10px;
  margin-bottom:10px;
  border-bottom: 2px solid #8167a9;
}
.friend-name {
  margin-top:5px;
  padding:5px 0 5px 0;
}

.button-second {
  background: linear-gradient(45deg, #B388EB, #8093F1);
  border-radius: 10px;
  color: #FFF;
  font-size: 15px;
  letter-spacing: 1px;
  font-weight: 100;
  border: double 4px white;
  font-family: 'Bluesky';
  padding:5px;
}

.form-control {
  width:830px;
  height:50px;
  margin-left:auto;
}

.col-xs-9 {
  overflow: scroll;
  height: 400px;
}

.line-bc {
  padding: 20px 10px;
  max-width: 450px;
  margin: 15px auto;
  text-align: right;
  font-size: 14px;
  background: #7da4cd;

}

/*以下、②左側のコメント*/
.balloon6 {
  width: 100%;
  margin: 10px 0;
  overflow: hidden;
}

.balloon6 .faceicon {
  float: left;
  margin-right: -50px;
  width: 40px;
}

.balloon6 .faceicon img{
  width: 100%;
  height: auto;
  border-radius: 50%;
}
.balloon6 .chatting {
  width: 100%;
  text-align: left;
}
.says {
  display: inline-block;
  position: relative; 
  margin: 0 0 0 50px;
  padding: 10px;
  max-width: 300px;
  border-radius: 12px;
  background: #edf1ee;
}

.says:after {
  content: "";
  display: inline-block;
  position: absolute;
  top: 3px; 
  left: -19px;
  border: 8px solid transparent;
  border-right: 18px solid #edf1ee;
  -webkit-transform: rotate(35deg);
  transform: rotate(35deg);
}
.says p {
  margin: 0;
  padding: 0;
}

/*以下、③右側の緑コメント*/
.mycomment {
  margin: 10px 0;
}
.mycomment p {
  display: inline-block;
  position: relative; 
  margin: 0 0 0 500px;
  padding: 8px;
  max-width: 300px;
  border-radius: 12px;
  background: #edf1ee;
  font-size: 15px:
}

.mycomment p:after {
  content: "";
  position: absolute;
  top: 3px; 
  right: -19px;
  border: 8px solid transparent;
  border-left: 18px solid #edf1ee;
  -webkit-transform: rotate(-35deg);
  transform: rotate(-35deg);
}

</style>
<body>

<br>
<div class="row">
  <div class="col-xs-3 text-center">
    <h3 class="room-name"><%= @room.room_name %></h3>
    <h3>チャット参加者</h3>
    <% @entries.each do |e| %>
      <h5 class="friend-name"><strong><a href="/users/<%= e.user.id%>"><%= e.user.name %></a></strong></h5>
    <% end %>
    <a href="/rooms/<%= @room.id %>/edit" class="button-second">チャット名を変更する</a>
  </div>
  <div class="col-xs-9">
     <% if @messages.present? %>
      <% @messages.each do |m| %>
        <% if m.user_id == current_user.id %>
          
          <div class="mycomment">
              <p><%= m.message %>
                  <br><br>
                  <small><%= m.created_at.strftime("%Y-%-m-%-d %-H:%-M:%-S") %><strong><a href="/users/<%= m.user_id %>"><%= m.user.name %></a></strong></small>
              </p>
            </div>
          
        <% else %>
        
        <div class="balloon6">
            <div class="faceicon">
              <%= image_tag m.user.icon.to_s %>
            </div>
            <div class="chatting">
              <div class="says">
                <p> <%= m.message %>
                    <br><br>
                    <small><%= m.created_at.strftime("%Y-%-m-%-d %-H:%-M:%-S") %><strong><a href="/users/<%= m.user_id %>"><%= m.user.name %></a></strong></small>
                </p>
              </div>
            </div>
          </div>
          
        <% end %>
      <% end %>
    <% else %>
      <br>
      <h3 class="text-center">メッセージはまだありません</h3>
      <br>
    <% end %>
    
    </div>
</div>
     <hr>
     
    <%= form_for @message do |f| %>
      <%= f.text_field :message, :class => "form-control", :placeholder => "メッセージを入力して下さい" %>
      <%= f.hidden_field :room_id, :value => @room.id %>
      <br>
      <div class="text-center">
        <%= f.submit "投稿する", :class => "button-second second" %>
      </div>
      <br>
    <% end %>
  

</body>