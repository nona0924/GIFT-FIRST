<br>
<div class="row">
  <div class="col-xs-3 text-center">
    <h4><%= @room.room_name %></h4>
    <hr>
    <h4>チャット参加者</h4>
    <% @entries.each do |e| %>
      <h5><strong><a href="/users/<%= e.user.id%>"><%= e.user.name %></a></strong></h5>
    <% end %>
    <a href="/rooms/<%= @room.id %>/edit" class="btn btn-success">チャット名を変更する</a>
  </div>
  <div class="col-xs-9">
     <% if @messages.present? %>
      <% @messages.each do |m| %>
        <% if m.user_id == current_user.id %>
          <h4 class="text-right">
          <p class="alert alert-success">
          <%= m.message %>
          <br><br>
          <small><strong><a href="/users/<%= m.user_id %>"><%= m.user.name %></a></strong></small>
          </p>
          </h4>
        <% else %>
          <h4 class="text-left">
          <p class="alert alert-info">
          <%= m.message %>
          <br><br>
          <small><strong><a href="/users/<%= m.user_id %>"><%= m.user.name %></a></strong></small>
          </p>
          </h4>
        <% end %>
      <% end %>
    <% else %>
      <br>
      <h3 class="text-center">メッセージはまだありません</h3>
      <br>
    <% end %>
     <hr>
    <%= form_for @message do |f| %>
      <%= f.text_field :message, :class => "form-control myform", :placeholder => "メッセージを入力して下さい" %>
      <%= f.hidden_field :room_id, :value => @room.id %>
      <br>
      <div class="text-center">
        <%= f.submit "投稿する", :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>